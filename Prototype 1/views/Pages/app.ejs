        <div class="scrollable-workout-list" id="scrollableWorkoutList"></div>
        <div id="workout-list">
            <form id="workoutForm" action="/executeWorkout" method="POST" style="display: none;">
                <input type="hidden" name="workout" id="workoutInput">
                <input type="hidden" name="userHiddenValue" id="userHiddenValue" value="<%= JSON.stringify(user) %>">
            </form>
            <% if (workouts.length> 0) { %>
                <% workouts.forEach(function(workout) { %>
                    <div class="carde" data-workout='<%= JSON.stringify(workout) %>'>
                        <div class="card-content">
                            <h2 class="titre">
                                <%= workout.nom_workout %>
                            </h2>
                            <p class="description">
                                <%= workout.desc_workout %>
                            </p>

                            <% if (!workout.IsTemplate_workout) { %>
                                <div class="tempsHeure">
                                    <p>
                                        <%= workout.dureeSeconde_workout %>
                                    </p>
                                    <p>
                                        <%= workout.date_workout %>
                                    </p>
                                </div>
                                <% } %>

                                    <% if (workout.exercises && workout.exercises.length> 0) { %>
                                        <% workout.exercises.forEach(function(exercise) { %>
                                            <div class="exercise">
                                                <% if (exercise.series && exercise.series.length> 0) { %>
                                                    <% exercise.series.forEach(function(serie) { %>
                                                        <% if (workout.IsTemplate_workout) { %>
                                                            <!-- Display for templates without series details -->
                                                            <h3>
                                                                <%= serie.nom_exo %>
                                                            </h3>
                                                            <div class="description-panel">
                                                                <p class="description">
                                                                    <%= serie.desc_exo %>
                                                                </p>
                                                            </div>
                                                            <% } else { %>
                                                                <!-- Display for normal workouts with series details -->
                                                                <h3>
                                                                    <%= serie.nom_exo %>
                                                                </h3>
                                                                <p>
                                                                    <%= serie.reps %> repetitions, RPE: <%= serie.rpe %>
                                                                </p>
                                                                <div class="description-panel">
                                                                    <p class="description">
                                                                        <%= serie.desc_exo %>
                                                                    </p>
                                                                </div>
                                                                <% } %>
                                                                    <% }); %>
                                                                        <% } else { %>
                                                                            <p>No series found for this exercise.</p>
                                                                            <% } %>
                                            </div>
                                            <% }); %>
                                                <% } else { %>
                                                    <p>No exercises found for this workout.</p>
                                                    <% } %>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No workouts found.</p>
                            <% } %>
        </div>
    </div>
